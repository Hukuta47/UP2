<Page x:Class="RepairTrack.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RepairTrack.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

	<Border Background="#ffffff">
		<StackPanel>
			<TextBlock Text="логин" Style="{StaticResource Title}"/>
			<TextBox Name="Textbox_Username"/>
			<TextBlock Text="пароль" Style="{StaticResource Title}"/>
			<PasswordBox Name="PasswordBox_Password"/>
			<Button Content="вход" Click="Login_Click"/>
			<Button Content="регистрация" Click="Registartion_Click"/>
		</StackPanel>
	</Border>
</Page>
