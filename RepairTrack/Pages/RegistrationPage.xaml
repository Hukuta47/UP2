<Page x:Class="RepairTrack.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RepairTrack.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

	<Border Background="#ffffff">
		<StackPanel>
			<TextBlock Text="ФИО" Style="{StaticResource Title}"/>
			<TextBox Name="Textbox_Name"/>
			<TextBlock Text="Логин" Style="{StaticResource Title}"/>
			<TextBox Name="Textbox_Username"/>
			<TextBlock Text="Пароль" Style="{StaticResource Title}"/>
			<PasswordBox Name="PasswordBox_FirstPassword"/>
			<TextBlock Text="Повторите пароль" Style="{StaticResource Title}"/>
			<PasswordBox Name="PasswordBox_SecondPassword"/>
			<TextBlock Text="Контактные данные" Style="{StaticResource Title}"/>
			<TextBox Name="TextBox_ContactInfo"/>
			<Button Content="регистрация" Click="Registration_Click"/>
		</StackPanel>
	</Border>
</Page>
