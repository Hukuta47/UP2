<Page x:Class="RepairTrack.Pages.Roles.Client.CreateRequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RepairTrack.Pages.Roles.Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateRequestPage">

    <Grid>
		<StackPanel>
			<TextBlock Text="Устройство"/>
			<ComboBox Name="ComboBox_Device"/>
			<TextBlock Text="Проблема"/>
			<ComboBox Name="ComboBox_Issue"/>
			<TextBlock Text="Описание проблемы"/>
			<TextBox Name="TextBox_Desription" AcceptsReturn="True"/>
			<Button Content="Отправить" Click="CreateRequest_Button"/>
			<Button Content="Отмена" Click="Cancel_Click"/>
		</StackPanel>
	</Grid>
</Page>
